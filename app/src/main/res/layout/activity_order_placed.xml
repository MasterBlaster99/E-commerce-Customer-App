<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPlacedActivity">
    <ImageView
        android:id="@+id/orderCheckImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_baseline_check_box_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></ImageView>
    <TextView
        android:id="@+id/orderPlacedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:text="Order Placed"
        app:layout_constraintTop_toBottomOf="@id/orderCheckImage"
        app:layout_constraintRight_toRightOf="@id/orderCheckImage"
        app:layout_constraintLeft_toLeftOf="@id/orderCheckImage"></TextView>
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Browsing"
        android:padding="15dp"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderPlacedText"
        android:layout_marginTop="30dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>